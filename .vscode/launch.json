{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (API)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "Run API",
        "program": "${Project}/CustomerService/bin/Debug/net8.0/CustomerService.dll",
        "args": [],
        "cwd": "${Project}/CustomerService",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "console": "internalConsole"
      },
      {
        "name": ".NET Core Launch (UI)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "Run UI",
        "program": "${Project}/PinewoodTask.UI/bin/Debug/net8.0/PinewoodTask.UI.dll",
        "args": [],
        "cwd": "${Project}/PinewoodTask.UI",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "console": "internalConsole"
      }
    ]
  }
  